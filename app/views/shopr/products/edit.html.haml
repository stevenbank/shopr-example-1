- @page_title = t('shopr.products.products')
= content_for :header do
  %p.buttons
    = link_to t('shopr.products.comments') , [@product, :comments], :class => 'button'
    = link_to t('shopr.products.variants') , [@product, :variants], :class => 'button'
    = link_to t('shopr.products.stock_levels') , stock_level_adjustments_path(:item_id => @product.id, :item_type => @product.class), :class => 'button', :rel => 'dialog', :data => {:dialog_width => 700, :dialog_behavior => 'stockLevelAdjustments'}
    = link_to t('shopr.products.back_to_products') , :products, :class => 'button'
  %h2.products= t('shopr.products.products')
= render 'form'